<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% set page = app.request.get("_route") %}

    <title>
        {#{%- if page != "home" %}{{ record.title|striptags }} | {% endif -%}#}
        {{ config.get('general/sitename') -}}
        {% if page == "home" and config.get('general/payoff') %} | {{ config.get('general/payoff') }}{% endif -%}
    </title>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-127758071-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-127758071-1');
    </script>

    {% if record.keywords is defined and record.keywords != "" and record.keywords is not empty %}
        <meta name="keywords" content="{{ record.keywords }}">
    {% endif %}

    {% if record.description is defined and record.description != "" and record.description is not empty %}
        <meta name="description" content="{{ record.description }}">
    {% endif %}

    <!-- favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="{{ paths.theme }}media/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ paths.theme }}media/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ paths.theme }}media/favicon/favicon-16x16.png">
    <link rel="manifest" href="{{ paths.theme }}media/favicon/site.webmanifest">
    <link rel="mask-icon" href="{{ paths.theme }}media/favicon/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#00aba9">
    <meta name="theme-color" content="#ffffff">

    <!-- Font Awesome -->
    {#<link rel="stylesheet" href="{{ paths.theme }}css/main.css">#}
    <script defer src="{{ paths.theme }}font-awesome/js/fontawesome-all.js"></script>

    <!-- Facebook SDK -->
    <div id="fb-root"></div>
    <script>(function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s);
            js.id = id;
            js.src = 'https://connect.facebook.net/nl_NL/sdk.js#xfbml=1&version=v2.12';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>

    <!-- Bootstrap CSS -->

    <link rel="stylesheet" href="{{ paths.theme }}css/bootstrap.css">

    <!-- CSS -->
    {#<link rel="stylesheet" href="{{ paths.theme }}css/main.min.css">#}
    <link rel="stylesheet" href="{{ paths.theme }}css/main.css">
    <link rel="stylesheet" href="{{ paths.theme }}css/utilities/fonts.css">

    <link rel="stylesheet" href="{{ paths.theme }}css/utilities/variables.css">
    <link rel="stylesheet" href="{{ paths.theme }}css/utilities/form.css">
    <link rel="stylesheet" href="{{ paths.theme }}css/utilities/typography.css">

    <link rel="stylesheet" href="{{ paths.theme }}css/components/header.css?v=2">
    <link rel="stylesheet" href="{{ paths.theme }}css/components/footer.css">

    <link rel="stylesheet" href="{{ paths.theme }}fullcalendar-3.9.0/fullcalendar.min.css">

    <link rel="stylesheet" href="{{ paths.theme }}css/components/pager.css">
</head>
